	public void atomicTick(int dt) {
	    System.out.println("ğŸ”„ atomicTick aangeroepen, dt = " + dt);
	    
	    player.updateSpeedWithGravity(gravCst, dt, gravitySwitched);
	    System.out.println("ğŸŒ Gravity toegepast, nieuwe snelheid: " + player.getSpeed().x() + ", " + player.getSpeed().y());

	    Rectangle newHitbox = player.getHitbox().plus(player.getSpeed()); 
	    var mbColliderRect = Rectangle.selectCollider(newHitbox, rectangles());

	    if (mbColliderRect.isEmpty()) { 
	        System.out.println("âœ… Geen botsing, speler beweegt naar: " + newHitbox.getBL());
	        player.setPosition(newHitbox.getBL());
	    } else { 
	        Rectangle col = mbColliderRect.get(); 
	        System.out.println("âš ï¸ Botsing met object op: " + col);

	        Gem mbGem = findGemWithRect(col);
	        if (shipOnField != null && shipOnField.getHbox().equals(col)) { 
	            System.out.println("ğŸš€ Spaceship verzameld!");
	            player.setShip(shipOnField);
	            shipOnField = null;
	        } else if (mbGem != null) { 
	            System.out.println("ğŸ’ Gem verzameld: " + mbGem.getColor());
	            player.addGemToBag(mbGem);
	            gemsOnField = Arrays.stream(gemsOnField)
	                                .filter(g -> !g.equals(mbGem))
	                                .toArray(Gem[]::new);
	        } else { 
	            System.out.println("â¬‡ï¸ Botsing met muur/blok, snelheid wordt aangepast.");
	            Vector newSpeed = Rectangle.speedFromCollision(player.getHitbox(), player.getSpeed(), col);
	            System.out.println("ğŸï¸ Snelheid voor aanpassing: " + player.getSpeed().x() + ", " + player.getSpeed().y());
	            player.setSpeed(newSpeed);
	            System.out.println("ğŸš€ Snelheid na aanpassing: " + player.getSpeed().x() + ", " + player.getSpeed().y());

	            Rectangle newHitbox2 = player.getHitbox().plus(player.getSpeed());
	            if (Rectangle.selectCollider(newHitbox2, rectangles()).isEmpty()) { 
	                System.out.println("âœ… Geen tweede botsing, speler beweegt naar: " + newHitbox2.getBL());
	                player.setPosition(newHitbox2.getBL());
	            }
	        }
	    }
	}
